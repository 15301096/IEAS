<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_open_door"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ieas.openDoorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/title_imv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@android:drawable/ic_menu_revert" />
        <TextView
            android:id="@+id/title_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="开 门 迎 客"
            android:textSize="20sp"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center">
        <LinearLayout
            android:layout_width="650px"
            android:layout_height="400px"
            android:background="@color/lavender"
            android:orientation="horizontal">
            <TextView
                android:layout_width="600px"
                android:layout_height="100px"
                android:gravity="center"
                android:layout_marginRight="20px"
                android:layout_marginLeft="20px"
                android:layout_marginTop="150px"
                android:text="采集防盗门外的图像"
                android:textSize="20dp"
                android:textColor="#040000"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <LinearLayout
            android:layout_width="400px"
            android:layout_height="160px"
            android:background="@color/orange"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="150px"
                android:layout_height="150px"
                android:scaleType="fitXY"
                android:layout_marginLeft="10px"
                android:src="@mipmap/ic_check"/>
            <TextView
                android:layout_width="200px"
                android:layout_height="100px"
                android:layout_marginTop="40px"
                android:text="开 门"
                android:textSize="30dp"
                android:textColor="#040000"/>
            >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:paddingBottom="50px"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <LinearLayout
            android:layout_width="400px"
            android:layout_height="160px"
            android:background="@color/orangered"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="150px"
                android:layout_height="150px"
                android:scaleType="fitXY"
                android:layout_marginLeft="10px"
                android:src="@mipmap/ic_local_phone"/>
            <TextView
                android:layout_width="200px"
                android:layout_height="100px"
                android:layout_marginTop="40px"
                android:text="报 警"
                android:textSize="30dp"
                android:textColor="#040000"/>
            >
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
